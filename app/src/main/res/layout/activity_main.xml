<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnFecha"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:text="Fecha"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="62dp" />

    <EditText
        android:id="@+id/txtFecha"
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:layout_marginStart="68dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/btnFecha"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/txtubic"
        android:layout_width="93dp"
        android:layout_height="41dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="UbicaciÃ³n:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFecha" />

    <Spinner
        android:id="@+id/spubicacion"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/txtubic"
        app:layout_constraintTop_toBottomOf="@+id/txtFecha" />

    <Button
        android:id="@+id/btnguardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="48dp"
        android:onClick="guardar"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnScaner"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="Scanear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtubic" />

    <EditText
        android:id="@+id/txtVin"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="17"
        app:layout_constraintStart_toEndOf="@+id/btnScaner"
        app:layout_constraintTop_toBottomOf="@+id/spubicacion" />

</androidx.constraintlayout.widget.ConstraintLayout>